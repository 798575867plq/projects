@{
    Page.Title = "Info";
    Layout = "~/_LayoutMain.cshtml";
    WeiBo.dal.entity.TblUser user = (WeiBo.dal.entity.TblUser)Session["LoginUser"];
}

@section style{
    <style type="text/css">
        iframe {
            width: 100%;
            border: 0px;
        }
    </style>
}
<iframe src="~/User/"></iframe>
<div class="row">
    <div class="col-sm-hidden col-md-4"></div>
    <div class="col-sm-12 col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="text-center">
                    @Model.Info.Title
                </div>
            </div>
            <div class="panel-body">
                <span>@Model.Info.Nickname</span>
                在
                <span>@Model.Info.Created</span>
                说：
                <hr />
                @Model.Info.Content
            </div>
            <div class="panel-footer">
                @if(Model.RList.Count==0)
                {
                    <span>暂时没有回复</span>
                }
                else
                {
                    foreach (var r in Model.RList)
                    {
                    <hr />
                    <span>@r.Nickname</span>
                    <span>在</span>
                    <span>@r.Created</span>
                    <span>回复：</span>
                    <br />
                    <span>@r.Content</span>
                    }
                }
                @if (user != null)
                {
                    <form action="~/Message/AddReturn" method="post">
                        <div class="form-group">
                            <div class="input-group">
                                <label class="input-group-addon">回复：</label>
                                <input type="text" name="RInfo.Content" class="form-control" />
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" value="确定" class="btn btn-primary" />
                        </div>
                        <input type="hidden" name="RInfo.Mid" value="@Model.Info.Mid" />
                    </form>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-hidden col-md-4"></div>
</div>


