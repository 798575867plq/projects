@{
    Page.Title = "Index";
    Layout = "~/_LayoutMain.cshtml";
    //获取session中登录用户信息
    WeiBo.dal.entity.TblUser luser = (WeiBo.dal.entity.TblUser)Session["LoginUser"];
}

<div class="text-right">
    @if(luser==null) //没有登录的情况
    {
        
    <!-- 用户登录表单 -->
    <form action="~/User/Login" method="post" class="form-inline">
        <div class="form-group">
            <label>
                用户名：
                <input type="text" name="User.Username" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label>
                密码：
                <input type="password" name="User.Password" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="登录" class="btn btn-primary" />
            <a href="~/User/ToReg" target="_top" class="btn btn-primary">注册</a>
        </div>
        <div class="form-group">
            @Model.Message
        </div>
    </form>
        
    }
    else
    {
        <span>
            <i class="fa fa-user-o"></i>
            <a href="~/Message/List" target="_top">@luser.Nickname</a>
        </span>
        <a href="~/User/Logout">安全退出</a>  
    }
</div>
