@{
    Page.Title = "修改部门信息";
    Layout = "~/_LayoutMain.cshtml";
}

<form action="~/Dept/Modify" method="post">
    <input type="hidden" name="Dept.DeptId" value="@Model.Dept.DeptId" />
    <div class="row">
        <div class="col-sm-4 col-xs-hidden"></div>
        <div class="col-sm-4 col-xs-12">
            <h1 class="text-center">部门信息修改</h1>
            <div class="form-group">
                <div class="input-group">
                    <label class="input-group-addon">部门名称</label>
                    <input name="Dept.DeptName" value="@Model.Dept.DeptName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <label class="input-group-addon">部门描述</label>
                    <input name="Dept.DeptInfo" value="@Model.Dept.DeptInfo" class="form-control" />
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="保存部门" class="btn btn-info" />
                <a href="~/Dept/" class="btn btn-info">返回</a>
            </div>
            <div class="text-center text-danger">
                @Model.Message
            </div>
        </div>
        <div class="col-sm-4 col-xs-hidden"></div>
    </div>
</form>
